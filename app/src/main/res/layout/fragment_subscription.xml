<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.pathwaymedia.valisimofashions.view.SubscriptionFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_notsubscribed"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:padding="20dp"
                    android:textColor="@color/nokred"
                    android:text="@string/text_subscribe" />

                <ImageView
                    android:layout_width="match_parent"
                    android:padding="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/off"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:padding="2dp"
                    android:background="#e7e7e7"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="match_parent"
                        android:checked="true"
                        android:padding="10dp"
                        android:background="#ffffff"
                        android:id="@+id/rb_paystack"
                        android:text="(Pay in Naira)"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/paystack"
                        />
                    <RadioButton
                        android:layout_width="match_parent"
                        android:paddingRight="-30dp"
                        android:padding="10dp"
                        android:text="(Pay in Dollars)"
                        android:drawableLeft="@drawable/paypal"
                        android:layout_height="wrap_content"
                        />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:orientation="vertical">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="@drawable/border1"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:id="@+id/tv_subscribe"
                            android:layout_gravity="center"
                            android:text="Renew Subscription"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="@string/paytitle"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/bankdetails"/>
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_subscribed"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="20dp"
                    android:textColor="@color/okgreen"
                    android:text="@string/text_subscribed" />

                <ImageView
                    android:layout_width="match_parent"
                    android:padding="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/on"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:paddingBottom="10dp"
                            android:text="Subscription Details"/>

                        <!--LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:gravity="left"
                                android:text="Plan:"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textSize="18dp"
                                android:gravity="left"
                                android:id="@+id/tv_planName"
                                android:layout_height="wrap_content"
                                android:text="Monthly"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:gravity="left"
                                android:text="Amount:"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textSize="18dp"
                                android:gravity="left"
                                android:id="@+id/tv_amount"
                                android:layout_height="wrap_content"
                                android:text="123 Naira"/>
                        </LinearLayout-->




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:gravity="left"
                                android:text="Start Date:"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textSize="18dp"
                                android:gravity="left"
                                android:id="@+id/tv_start"
                                android:layout_height="wrap_content"
                                android:text="01/02/2017"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:gravity="left"
                                android:text="End Date:"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textSize="18dp"
                                android:gravity="left"
                                android:id="@+id/tv_next_payment_date"
                                android:layout_height="wrap_content"
                                android:text="01/03/2017"/>
                        </LinearLayout>



                    </LinearLayout>
                </android.support.v7.widget.CardView>



            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pb"
            android:visibility="gone"
            android:layout_gravity="center"/>


    </FrameLayout>


</ScrollView>
